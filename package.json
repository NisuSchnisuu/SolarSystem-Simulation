{
  "name": "solar-system-simulation",
  "version": "1.0.0",
  "description": "Eine interaktive Sonnensystem-Simulation",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "set NODE_ENV=development && electron .",
    "electron:build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.solarsystem.simulation",
    "productName": "SolarSystemSim",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/pwa-512x512.png"
    }
  },
  "keywords": [
    "space",
    "simulation",
    "threejs",
    "solar-system"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "vite": "^6.0.0",
    "vite-plugin-pwa": "^1.2.0"
  },
  "dependencies": {
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "three": "^0.128.0"
  }
}
